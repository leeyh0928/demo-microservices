{{>layout/header}}

<h1>상품 등록</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="productId">상품번호</label>
                <input type="number" class="form-control" id="productId" placeholder="상품번호를 입력하세요">
            </div>
            <div class="form-group">
                <label for="name">상품명</label>
                <input type="text" class="form-control" id="name" placeholder="상품명을 입력하세요">
            </div>
            <div class="form-group">
                <label for="weight">무게</label>
                <input type="number" class="form-control" id="weight" placeholder="무게를 입력하세요">
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">글 취소</a>
        <button type="button" class="btn btn-primary" id="btn-create">등록</button>
    </div>
</div>
<br>

{{>layout/footer}}